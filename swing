    private void bAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                         
                                          
    if (txtNombre.getText().isEmpty() || txtEdad.getText().isEmpty() || txtCorreo.getText().isEmpty()) {
        javax.swing.JOptionPane.showMessageDialog(this, "Por favor, completa todos los campos.", "Advertencia", javax.swing.JOptionPane.WARNING_MESSAGE);
        return;
    } 
    try {
        int edad = Integer.parseInt(txtEdad.getText().trim());
    } catch (NumberFormatException e) {
        javax.swing.JOptionPane.showMessageDialog(this, "La edad debe ser un número válido.", "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
        return;
    }

        Object[] O = new Object [4];
         O[0] = txtNombre.getText().trim();
         O[1] = txtEdad.getText().trim();
         O[2] = String.valueOf(genero.getSelectedItem()).trim();
         O[3] = txtCorreo.getText().trim();
         
         
         dtm.addRow(O);
         txtNombre.setText("");
         txtEdad.setText("");
         txtCorreo.setText("");
    }                                        

    private void bEliminarActionPerformed(java.awt.event.ActionEvent evt) {                                          
       int i = tUsuarios.getSelectedRow();
    
        if (i >= 0) {
        dtm.removeRow(i);
        } else {
           javax.swing.JOptionPane.showMessageDialog(this, "Por favor, selecciona un registro para eliminar.", "Advertencia", javax.swing.JOptionPane.WARNING_MESSAGE);
      }
    }                                         

